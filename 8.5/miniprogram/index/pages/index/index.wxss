@import "./index.skeleton.wxss";

page {
  background: #ececec;
}

.top-banner {
  
  top: 0;
  left: 0;
  height: 200px;
  width: 100%;
}

.top-nav {
  
  left: 0;
  top: 200px;
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-around;
  margin: 20px 0;
}

.nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav_item_image {
  width: 60px;
  height: 60px;
  padding: 10px;
  border-radius: 50%;
  border: 1px solid #ccc;
  background-color: beige;
  box-sizing: border-box;
}

.nav_item_title {
  margin-top: 10px;
  text-align: center;
}

.content {
  display: flex;
  flex-direction: column;
}

.swiper {
  height: 200px;
}

.swiper-item{
  display: block;
  height: 200px;
  font-size: 48px;
  color: #353535;
}
.swiper-item image {
  width: 100%;
}

.demo-text-1{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #1AAD19;
  
  
}
.demo-text-1:before{
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}


.row {
  height: 120px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left:10rpx;
  border-bottom: 10px solid #ececec;
  background-color: whitesmoke;
}

.content {
  display: flex;
  flex-direction: column;
    height: 120px;
    display: flex;
    width: 60%;
    flex-direction:column;
    align-items: center;
    padding:10rpx;
}

.top {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.nickname {
  width: 100%;
    color: #4d4d4d;
    font-size: 36rpx;
}


.sentence {
    color: #6f6f6f;
    font-size: 22rpx;
    margin-top: 6rpx;
    overflow: hidden; 
    text-overflow: ellipsis; 
    max-lines: 2;
    display: block;
}
.imgview{
  height: 120px;
    display: flex;
    width: 40%;
    flex-direction:column;
    align-items: center;
}

.img {
  width: 100%;
  height: 100%;
}

recycle-view {
  background-color: #ececec;
  -webkit-overflow-scrolling: touch;
}

recycle-item{
  padding: 0px 15px 0;
}

.switch-btns__group {
  display: flex;
  justify-content: space-between;
}

.switch-btns__item {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
}

