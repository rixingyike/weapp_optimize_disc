@import "./index.skeleton.wxss";

page {
  background: #ececec;
}

.top-banner {
  /* position: absolute; */
  top: 0;
  left: 0;
  height: 200px;
  width: 100%;
}

.top-nav {
  /* position: absolute; */
  left: 0;
  top: 200px;
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-around;
  margin: 20px 0;
}

.nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav_item_image {
  width: 60px;
  height: 60px;
  padding: 10px;
  border-radius: 50%;
  border: 1px solid #ccc;
  background-color: beige;
  box-sizing: border-box;
}

.nav_item_title {
  margin-top: 10px;
  text-align: center;
}

.content {
  display: flex;
  flex-direction: column;
}

.content_item {
  padding: 20px;
  display: flex;
  height: 120px;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.content_item_img {
  display: inline-block;
  width: 80px;
  height: 80px;
  margin-right: 30px;
  border: 1px solid #ccc;
  box-sizing: border-box;
  flex-shrink: 0;
}

.content_item_text {
  display: inline-block;
}

.middle-content {
  position: absolute;
  top: 340px;
  height: 360px;
}

.swiper {
  height: 200px;
}

.swiper-item{
  display: block;
  height: 200px;
  font-size: 48px;
  color: #353535;
}
.swiper-item image {
  width: 100%;
}

